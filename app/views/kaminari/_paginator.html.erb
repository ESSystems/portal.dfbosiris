<%# The container tag
  - available local variables
    current_page:  a page object for the currently displayed page
    num_pages:     total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
    paginator:     the paginator that renders the pagination tags inside
-%>
<%= paginator.render do -%>
	<ul class="pagination">
		<li class="<%= "disabled" if current_page.first? %>"><%= first_page_tag %></li>
		<li class="<%= "disabled" if current_page.first? %>"><%= prev_page_tag %></li>
	    <% each_page do |page| -%>
	      <% if page.left_outer? || page.right_outer? || page.inside_window? -%>
	        <li><%= page_tag page %></li>
	      <% elsif !page.was_truncated? -%>
	        <li><%= gap_tag %></li>
	      <% end -%>
	    <% end -%>
	    <li class="<%= "disabled" if current_page.last? %>"><%= next_page_tag %></li>
		<li class="<%= "disabled" if current_page.last? %>"><%= last_page_tag %></li>
</ul>
<% end -%>
