<% title "Referrals" %>
<div class="grid_16 widget first">
    <div class="widget_title clearfix">
        <h2>List</h2>
		<ul>
			<li><%= link_to "New referral", new_referral_path, :class => "btn orange right" %></li>
		</ul>
    </div>
    <div class="widget_body">
		<div class="widget_options clearfix">
		</div>
		<table>
			<thead>
				<tr>
					<td style="width:18px">&nbsp;</td>
					<td style="width:90px">Case Reference Number</td>
					<td style="width: 150px;">Person</td>
					<td>Case nature</td>
					<td style="width: 170px;">Referral reason</td>
					<td class="action">Action</td>
				</tr>
			</thead>
			<tbody>
				<% @referrals.each do |referral| %>
				<tr>
					<td><%= "<span class=\"icon attachments\" original-title=\"Has attachments\"></span>".html_safe if not referral.documents.empty? %></td>
					<td><%= h(referral.case_reference_number) %></td>
					<td><%= h(referral.person.full_name) %></td>
					<td><%= h(referral.short_case_nature) %></td>
			  		<td><%= h(referral.referral_reason.reason) %></td>
			  		<td>
			  			<ul class="hor-list piped">
			  				<li><%= link_to "View", referral_path(referral) %></li>
			  				<li><%= link_to "Edit", edit_referral_path(referral) %></li>
			  				<li><a href="#">Cancel</a></li>
			  			</ul>
			  		</td>
				</tr>
				<% end %>
			</tbody>
		</table>
    </div>
</div>
