<% title "View referral for " << @referral.person.full_name << " / " << @referral.case_reference_number %>

<% box_extra = link_to "Edit referral", edit_referral_path(@referral), :class => "btn orange right" %>
<%= box_widget "Referral information", {:body_class => "information"}, [box_extra] do %>
	<ul>
		<li><span class="label">State</span>: <%= @referral.state %> <%= %Q/because "#{@referral.declination}" / if !@referral.declination.nil? %></li>
		<li class="full-width"><span class="label">Person</span>: <%= @referral.person.full_name %> - <%= render 'shared/person_information', :person => @referral.person %></li>
		<li class="clr"><span class="label">Patient status</span>: <%= @referral.patient_status.status %></li>
		<li><span class="label">Patient consent</span>: <%= @referral.show_patient_consent %></li>
		<li><span class="label">Referral Reason</span>: <%= @referral.referral_reason.reason %></li>
		<li><span class="label">Preferred date</span>: <%= @referral.preferred_date %></li>
		<li class="full-width"><span class="label">Case nature</span>: <%= @referral.case_nature %></li>
		<li class="full-width"><span class="label">Specific requirements</span>: <%= @referral.specific_requirements %></li>
		<li class="full-width"><span class="label">Advice</span>: <%= @referral.advice %></li>
		<li><span class="label">Documents</span>: <%= show_documents @referral.documents %></li>
		<li><span class="label">Followers</span>: <%= show_followers @referral.followers %></li>
	</ul>	
	<div class="clear"></div>
<% end %>

<% if @referral.appointment %>
	<%
		if @referral.appointment.confirmed?
			appointment_message = "You confirmed the appointment for"
			confirm_extra = ""
		else
			appointment_message = "An appointment was created for this referral. Please confirm the appointment if the date is convenient or choose another date"
			confirm_extra = link_to "Choose another date", "#calendar", :class => "btn grey right", :id => "choose-appointment-date", :appointment_id => @referral.appointment.id, :start_date => @referral.appointment.from_date
			confirm_extra += link_to "Confirm appointment", confirm_appointment_path(@referral.appointment), :class => "btn orange right"
		end
	%>
	<%= box_widget "Appointment", {}, [confirm_extra] do %>
		<p><%= appointment_message %>: <b id="appointment-date"><%= @referral.appointment.display_date %></b> with <b><%= @referral.appointment.diary.name %></b></p>
		<br />
		<div id="calendar" name="calendar"></div>
	<% end %>
<% end %>
