<% title "Forgot your password?" %>

<%= box_widget "Reset your password" do %>
	<%= semantic_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |form| %>
		<%= form.inputs do %>
			<%= form.input :email %>
		<% end %>

		<%= form.actions do %>
			<%= form.button "Send me reset password instructions", :button_html => {:class => "btn large orange auto"} %>
		<% end %>
	<% end %>
<% end %>

<%= box_widget "Other options" do %>
	<%= render :partial => "devise/shared/links" %>
<% end %>