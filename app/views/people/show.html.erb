<% title "View " << @person.full_name %>

<% box_extra = link_to "Edit person", edit_person_path(@person), :class => "btn orange right" %>
<%= box_widget "Person information", {:body_class => "information"}, [box_extra] do %>
	<ul>
		<li><span class="label">First name</span>: <%= @person.first_name %></li>
		<li><span class="label">Middle name</span>: <%= @person.middle_name %></li>
		<li><span class="label">Last name</span>: <%= @person.last_name %></li>
		<li><span class="label">Title</span>: <%= @person.title %></li>
		<li><span class="label">Date of birth</span>: <%= @person.date_of_birth %></li>
		<li><span class="label">Gender</span>: <%= @person.gender %></li>
		<li><span class="label">Address 1</span>: <%= @person.address1 %></li>
		<li><span class="label">Address 2</span>: <%= @person.address2 %></li>
		<li><span class="label">Address 3</span>: <%= @person.address3 %></li>
		<li class="clr"><span class="label">County</span>: <%= @person.county %></li>
		<li><span class="label">Post code</span>: <%= @person.post_code %></li>
		<li><span class="label">Area code</span>: <%= @person.area_code %></li>
		<li><span class="label">Telephone number</span>: <%= @person.telephone_number %></li>
		<li><span class="label">Extension</span>: <%= @person.extension %></li>
		<li><span class="label">Email address</span>: <%= @person.email_address %></li>
	</ul>	
	<div class="clear"></div>
<% end %>

<% if !@person.employee.nil? %>
	<%= box_widget "Employee information", {:body_class => "information"} do %>
	<ul>
		<li><span class="label">Organisation name</span>: <%= @person.employee.organisation %></li>
		<li><span class="label">SAP numbers</span>: <%= @person.employee.sap_number %></li>
		<li><span class="label">Department</span>: <%= @person.employee.department %></li>
	</ul>
	<div class="clear"></div>
	<% end %>
<% end %>
