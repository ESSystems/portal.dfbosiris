<div class="grid_16 widget first">
    <div class="widget_title clearfix">
        <h2><%= title %></h2>
		<ul>
			<li><%= link_to("New person", new_person_path, :class => "btn orange right") if show_new_link %></li>
		</ul>
    </div>
    <div class="widget_body">
		<div class="widget_options clearfix">
		</div>
		<table>
			<thead>
				<tr>
					<td>Full name</td>
					<td style="width: 130px;">Date of birth</td>
					<td style="width: 90px">County</td>
					<td style="width: 230px;">Contact</td>
					<td style="width: 100px">Organisation</td>
					<td class="action">Action</td>
				</tr>
			</thead>
			<tbody id="<%= type %>">
				<% people.each do |person| %>
					<%= render 'person', :person => person %>
				<% end %>
			</tbody>
		</table>
		<div id="<%= type %>-paginator"><%= paginate people, :params => {:type => type}, :remote => true %></div>
    </div>
</div>